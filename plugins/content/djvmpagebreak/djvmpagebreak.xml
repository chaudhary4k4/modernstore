	<name>DJ-VMPagebreak Content Plugin</name>
	<creationDate>February 2012</creationDate>
	<author>Blue Constant Media LTD</author>"LICENSE.txt"
	<copyright>Copyright (C) 2010 Blue Constant Media LTD, All rights reserved.</copyright>
	<license> http://www.gnu.org/licenses GNU/GPL</license>
	<authorEmail>contact@design-joomla.eu</authorEmail>
	<authorUrl>http://design-joomla.eu</authorUrl>
	<version>1.3</version>
	<description>PLG_CONTENT_DJVMPAGEBREAK_XML_DESCRIPTION</description>
	<files>
		<filename plugin="djvmpagebreak">djvmpagebreak.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>css</folder>
	</files>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="style" type="list"
					default="tabs"
					description="PLG_CONTENT_DJVMPAGEBREAK_STYLE_DESC"
					label="PLG_CONTENT_DJVMPAGEBREAK_STYLE_LABEL"
				>
					<option value="sliders">PLG_CONTENT_DJVMPAGEBREAK_SLIDERS</option>
					<option value="tabs">PLG_CONTENT_DJVMPAGEBREAK_TABS</option>
				</field>
				<field name="include_css" type="list" default="1" label="PLG_CONTENT_DJVMPAGEBREAK_INCLUDE_CSS" description="PLG_CONTENT_DJVMPAGEBREAK_INCLUDE_CSS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
